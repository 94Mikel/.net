@{
    ViewData["Title"] = "Contacto";
}

<h1>Formulario de Contacto</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Fulano de tal"/>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label> 
        <input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com"/>
    </div>
    <div class="mb-3">
        <label for="mesaje" class="form-label">Mesaje</label>
        <textarea name="mesaje" id="mesaje" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>